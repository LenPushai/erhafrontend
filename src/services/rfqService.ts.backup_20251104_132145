// src/services/rfqService.ts
// ERHA OPS - RFQ Service
// CLEAN VERSION - No PowerShell Corruption

import axios from 'axios';

const API_BASE_URL = 'http://localhost:8080/api/v1';

export interface RFQRequest {
  clientName: string;
  contactPerson: string;
  contactEmail: string;
  contactPhone: string;
  projectName: string;
  description: string;
  receivedDate: string;
  requiredBy: string;
  priority: string;
  status: string;
  operatingEntity: string;
  workLocation: string;
  estimatedValue?: number;
  assignedTo?: string;
}

const rfqService = {
  // Get all RFQs with pagination
  getAllRFQs: async (page = 0, size = 20) => {
    try {
      const response = await axios.get(`${API_BASE_URL}/rfqs?page=${page}&size=${size}`);
      return response.data;
    } catch (error: any) {
      console.error('Error fetching RFQs:', error);
      throw error;
    }
  },

  // Get single RFQ by ID
  getRFQById: async (id: number) => {
    try {
      if (!id || id <= 0) {
        throw new Error(`Invalid RFQ ID: ${id}`);
      }
      const response = await axios.get(`${API_BASE_URL}/rfqs/${id}`);
      return response.data;
    } catch (error: any) {
      console.error(`Error fetching RFQ ${id}:`, error);
      throw error;
    }
  },

  // Create new RFQ
  createRFQ: async (rfqData: RFQRequest) => {
    try {
      const response = await axios.post(`${API_BASE_URL}/rfqs`, rfqData);
      return response.data;
    } catch (error: any) {
      console.error('Error creating RFQ:', error);
      throw error;
    }
  },

  // Update existing RFQ
  updateRFQ: async (id: number, rfqData: Partial<RFQRequest>) => {
    try {
      if (!id || id <= 0) {
        throw new Error(`Invalid RFQ ID: ${id}`);
      }
      const response = await axios.put(`${API_BASE_URL}/rfqs/${id}`, rfqData);
      return response.data;
    } catch (error: any) {
      console.error(`Error updating RFQ ${id}:`, error);
      throw error;
    }
  },

  // Delete RFQ
  deleteRFQ: async (id: number) => {
    try {
      if (!id || id <= 0) {
        throw new Error(`Invalid RFQ ID: ${id}`);
      }
      const response = await axios.delete(`${API_BASE_URL}/rfqs/${id}`);
      return response.data;
    } catch (error: any) {
      console.error(`Error deleting RFQ ${id}:`, error);
      throw error;
    }
  },

  // Search RFQs
  searchRFQs: async (searchTerm: string) => {
    try {
      const response = await axios.get(`${API_BASE_URL}/rfqs/search?q=${encodeURIComponent(searchTerm)}`);
      return response.data;
    } catch (error: any) {
      console.error('Error searching RFQs:', error);
      throw error;
    }
  },

  // Filter RFQs by status
  getRFQsByStatus: async (status: string) => {
    try {
      const response = await axios.get(`${API_BASE_URL}/rfqs/status/${status}`);
      return response.data;
    } catch (error: any) {
      console.error(`Error fetching RFQs by status ${status}:`, error);
      throw error;
    }
  },

  // Filter RFQs by priority
  getRFQsByPriority: async (priority: string) => {
    try {
      const response = await axios.get(`${API_BASE_URL}/rfqs/priority/${priority}`);
      return response.data;
    } catch (error: any) {
      console.error(`Error fetching RFQs by priority ${priority}:`, error);
      throw error;
    }
  },

  // Get RFQ statistics
  getRFQStatistics: async () => {
    try {
      const response = await axios.get(`${API_BASE_URL}/rfqs/statistics`);
      return response.data;
    } catch (error: any) {
      console.error('Error fetching RFQ statistics:', error);
      throw error;
    }
  }
};

export default rfqService;