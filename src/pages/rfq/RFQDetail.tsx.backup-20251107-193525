import React, { useState, useEffect } from 'react';
import { useParams, useNavigate, Link } from 'react-router-dom';
import { rfqService } from '../../services/rfqService';

const RFQDetail: React.FC = () => {
  const { id } = useParams<{ id: string }>();
  const navigate = useNavigate();
  const [rfq, setRfq] = useState<any>(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);

  useEffect(() => {
    fetchRFQ();
  }, [id]);

  const fetchRFQ = async () => {
    if (!id) {
      setError('No RFQ ID provided');
      setLoading(false);
      return;
    }

    try {
      setLoading(true);
      setError(null);
      const data = await rfqService.getRfqById(id);
      setRfq(data);
    } catch (err: any) {
      console.error('Error fetching RFQ:', err);
      setError(err.response?.data?.message || err.message || 'Failed to load RFQ details');
    } finally {
      setLoading(false);
    }
  };

  const handleDelete = async () => {
    if (!rfq || !window.confirm('Are you sure you want to delete this RFQ?')) {
      return;
    }

    try {
      await rfqService.deleteRFQ(rfq.rfqId);
      navigate('/rfq');
    } catch (err: any) {
      console.error('Error deleting RFQ:', err);
      alert(err.response?.data?.message || 'Failed to delete RFQ');
    }
  };

  const handleCreateQuote = () => {
    if (!rfq) return;
    // Navigate to create quote with RFQ ID as query parameter
    navigate(`/quotes/create?rfqId=${rfq.rfqId}`);
  };

  if (loading) {
    return (
        <div className="container-fluid py-4">
          <div className="text-center">
            <div className="spinner-border text-primary" role="status">
              <span className="visually-hidden">Loading...</span>
            </div>
            <p className="mt-2 text-muted">Loading RFQ details...</p>
          </div>
        </div>
    );
  }

  if (error) {
    return (
        <div className="container-fluid py-4">
          <div className="alert alert-danger" role="alert">
            <h4 className="alert-heading">Error</h4>
            <p>{error}</p>
            <hr />
            <Link to="/rfq" className="btn btn-outline-danger">
              <i className="bi bi-arrow-left me-2"></i>
              Back to RFQs
            </Link>
          </div>
        </div>
    );
  }

  if (!rfq) {
    return (
        <div className="container-fluid py-4">
          <div className="alert alert-warning" role="alert">
            <h4 className="alert-heading">RFQ Not Found</h4>
            <p>The requested RFQ could not be found.</p>
            <hr />
            <Link to="/rfq" className="btn btn-outline-warning">
              <i className="bi bi-arrow-left me-2"></i>
              Back to RFQs
            </Link>
          </div>
        </div>
    );
  }

  const getStatusBadgeClass = (status: string) => {
    switch (status?.toUpperCase()) {
      case 'NEW': return 'bg-primary';
      case 'IN_PROGRESS': return 'bg-info';
      case 'QUOTED': return 'bg-success';
      case 'APPROVED': return 'bg-success';
      case 'REJECTED': return 'bg-danger';
      case 'CLOSED': return 'bg-secondary';
      default: return 'bg-secondary';
    }
  };

  const getPriorityBadgeClass = (priority: string) => {
    switch (priority?.toUpperCase()) {
      case 'HIGH': return 'bg-danger';
      case 'MEDIUM': return 'bg-warning text-dark';
      case 'LOW': return 'bg-info';
      default: return 'bg-secondary';
    }
  };

  return (
      <div className="container-fluid py-4">
        <div className="row mb-4">
          <div className="col-12">
            <div className="d-flex justify-content-between align-items-center">
              <div>
                <h2>
                  <i className="bi bi-file-earmark-text me-2"></i>
                  RFQ Details
                </h2>
                <p className="text-muted mb-0">Request for Quotation</p>
              </div>
              <div>
                <Link to="/rfq" className="btn btn-outline-secondary me-2">
                  <i className="bi bi-arrow-left me-2"></i>
                  Back to RFQs
                </Link>
                <Link to={`/rfq/${rfq.rfqId}/edit`} className="btn btn-primary">
                  <i className="bi bi-pencil me-2"></i>
                  Edit RFQ
                </Link>
              </div>
            </div>
          </div>
        </div>

        <div className="row">
          <div className="col-md-8">
            <div className="card shadow-sm mb-4">
              <div className="card-header bg-light">
                <h5 className="mb-0">RFQ Information</h5>
              </div>
              <div className="card-body">
                <div className="row mb-3">
                  <div className="col-md-6">
                    <strong>RFQ Number:</strong>
                    <p className="mb-0">{rfq.rfqNumber || 'N/A'}</p>
                  </div>
                  <div className="col-md-6">
                    <strong>Status:</strong>
                    <p className="mb-0">
                    <span className={`badge ${getStatusBadgeClass(rfq.rfqStatus)}`}>
                      {rfq.rfqStatus}
                    </span>
                    </p>
                  </div>
                </div>

                <div className="row mb-3">
                  <div className="col-md-6">
                    <strong>Client:</strong>
                    <p className="mb-0">{rfq.clientName || 'N/A'}</p>
                  </div>
                  <div className="col-md-6">
                    <strong>Priority:</strong>
                    <p className="mb-0">
                    <span className={`badge ${getPriorityBadgeClass(rfq.priority)}`}>
                      {rfq.priority || 'N/A'}
                    </span>
                    </p>
                  </div>
                </div>

                <div className="row mb-3">
                  <div className="col-12">
                    <strong>Description:</strong>
                    <p className="mb-0">{rfq.description || 'No description'}</p>
                  </div>
                </div>

                <div className="row mb-3">
                  <div className="col-md-6">
                    <strong>Requested Date:</strong>
                    <p className="mb-0">{rfq.requestedDate ? new Date(rfq.requestedDate).toLocaleDateString() : 'N/A'}</p>
                  </div>
                  <div className="col-md-6">
                    <strong>Required By:</strong>
                    <p className="mb-0">{rfq.requiredByDate ? new Date(rfq.requiredByDate).toLocaleDateString() : 'N/A'}</p>
                  </div>
                </div>

                {rfq.estimatedValue && (
                    <div className="row mb-3">
                      <div className="col-12">
                        <strong>Estimated Value:</strong>
                        <p className="mb-0">R {rfq.estimatedValue?.toLocaleString('en-ZA', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}</p>
                      </div>
                    </div>
                )}

                {rfq.notes && (
                    <div className="row mb-3">
                      <div className="col-12">
                        <strong>Notes:</strong>
                        <p className="mb-0 small text-muted">{rfq.notes}</p>
                      </div>
                    </div>
                )}
              </div>
            </div>

            {rfq.quotes && rfq.quotes.length > 0 && (
                <div className="card shadow-sm">
                  <div className="card-header bg-light">
                    <h5 className="mb-0">Related Quotes</h5>
                  </div>
                  <div className="card-body">
                    <div className="table-responsive">
                      <table className="table table-sm table-hover mb-0">
                        <thead>
                        <tr>
                          <th>Quote Number</th>
                          <th>Value</th>
                          <th>Status</th>
                          <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {rfq.quotes.map((quote: any) => (
                            <tr key={quote.quoteId}>
                              <td>{quote.quoteNumber}</td>
                              <td>R {quote.valueInclVat?.toLocaleString('en-ZA', { minimumFractionDigits: 2 })}</td>
                              <td>
                            <span className={`badge ${getStatusBadgeClass(quote.quoteStatus)}`}>
                              {quote.quoteStatus}
                            </span>
                              </td>
                              <td>
                                <Link to={`/quotes/${quote.quoteId}`} className="btn btn-sm btn-outline-primary">
                                  View
                                </Link>
                              </td>
                            </tr>
                        ))}
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
            )}
          </div>

          <div className="col-md-4">
            <div className="card shadow-sm mb-4">
              <div className="card-header bg-light">
                <h5 className="mb-0">Actions</h5>
              </div>
              <div className="card-body">
                <button
                    onClick={handleCreateQuote}
                    className="btn btn-success w-100 mb-2"
                >
                  <i className="bi bi-file-earmark-plus me-2"></i>
                  Create Quote from RFQ
                </button>
                <Link
                    to={`/rfq/${rfq.rfqId}/edit`}
                    className="btn btn-primary w-100 mb-2"
                >
                  <i className="bi bi-pencil me-2"></i>
                  Edit RFQ
                </Link>
                <button
                    onClick={handleDelete}
                    className="btn btn-outline-danger w-100"
                >
                  <i className="bi bi-trash me-2"></i>
                  Delete RFQ
                </button>
              </div>
            </div>

            <div className="card shadow-sm">
              <div className="card-header bg-light">
                <h5 className="mb-0">Metadata</h5>
              </div>
              <div className="card-body">
                <small className="text-muted d-block mb-2">
                  <strong>Created:</strong> {rfq.createdDate ? new Date(rfq.createdDate).toLocaleString() : 'N/A'}
                </small>
                <small className="text-muted d-block mb-2">
                  <strong>Created By:</strong> {rfq.createdBy || 'N/A'}
                </small>
                {rfq.updatedDate && (
                    <small className="text-muted d-block">
                      <strong>Last Updated:</strong> {new Date(rfq.updatedDate).toLocaleString()}
                    </small>
                )}
              </div>
            </div>
          </div>
        </div>
      </div>
  );
};

export default RFQDetail;