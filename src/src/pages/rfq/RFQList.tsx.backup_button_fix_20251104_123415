import React, { useEffect, useState } from 'react';
import { useNavigate } from 'react-router-dom';
import { Plus, Search, Filter, Eye, AlertCircle, Building, Calendar, Clock } from 'lucide-react';

interface RFQ {
  id: number;
  rfqNumber?: string;
  rfq_number?: string;
  clientName?: string;
  client_name?: string;
  projectName?: string;
  project_name?: string;
  receivedDate?: string;
  received_date?: string;
  requiredBy?: string;
  required_by?: string;
  priority: string;
  status: string;
  operatingEntity?: string;
  operating_entity?: string;
  estimatedValue?: number;
  estimated_value?: number;
  createdAt?: string;
  created_at?: string;
}

export default function RFQList() {
  const navigate = useNavigate();
  const [rfqs, setRfqs] = useState<RFQ[]>([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);
  const [searchTerm, setSearchTerm] = useState('');
  const [filterStatus, setFilterStatus] = useState('ALL');
  const [filterPriority, setFilterPriority] = useState('ALL');

  useEffect(() => {
    fetchRFQs();
  }, []);

  const fetchRFQs = async () => {
    try {
      const response = await fetch('http://localhost:8080/api/v1/rfqs');
      if (!response.ok) throw new Error('Failed to fetch RFQs');
      const data = await response.json();
      setRfqs(Array.isArray(data) ? data : (data.content || []));
    } catch (err) {
      setError('Failed to load RFQs. Ensure backend is running.');
      console.error('Error:', err);
    } finally {
      setLoading(false);
    }
  };

  const handleCreateRFQ = () => navigate('/rfqs/create');
  const handleViewRFQ = (id: number) => {
    if (id && id > 0) navigate('/rfqs/' + id);
  };

  const getField = (rfq: RFQ, camelCase: string, snake_case: string) => {
    return (rfq as any)[camelCase] || (rfq as any)[snake_case] || '';
  };

  const getPriorityBadge = (priority: string) => {
    const badges: any = { 'URGENT': 'danger', 'HIGH': 'warning', 'MEDIUM': 'info', 'LOW': 'secondary' };
    return badges[priority] || 'secondary';
  };

  const getStatusBadge = (status: string) => {
    const badges: any = { 'NEW': 'primary', 'IN_PROGRESS': 'info', 'QUOTED': 'success', 'WON': 'success', 'LOST': 'danger', 'CANCELLED': 'secondary' };
    return badges[status] || 'secondary';
  };

  const filteredRFQs = rfqs.filter(rfq => {
    if (!rfq) return false;
    const rfqNum = getField(rfq, 'rfqNumber', 'rfq_number');
    const clientName = getField(rfq, 'clientName', 'client_name');
    const projectName = getField(rfq, 'projectName', 'project_name');
    const matchesSearch = rfqNum.toLowerCase().includes(searchTerm.toLowerCase()) || clientName.toLowerCase().includes(searchTerm.toLowerCase()) || projectName.toLowerCase().includes(searchTerm.toLowerCase());
    const matchesStatus = filterStatus === 'ALL' || rfq.status === filterStatus;
    const matchesPriority = filterPriority === 'ALL' || rfq.priority === filterPriority;
    return matchesSearch && matchesStatus && matchesPriority;
  });

  if (loading) {
    return (<div className="container-fluid"><div className="d-flex justify-content-center align-items-center" style={{ minHeight: '400px' }}><div className="spinner-border text-primary"><span className="visually-hidden">Loading...</span></div></div></div>);
  }

  if (error) {
    return (<div className="container-fluid"><div className="alert alert-danger"><AlertCircle size={20} className="me-2" /><strong>Error:</strong> {error}</div></div>);
  }

  return (
    <div className="container-fluid">
      <div className="d-flex justify-content-between align-items-center mb-4">
        <div><h2 className="mb-1">RFQs</h2><p className="text-muted mb-0">{filteredRFQs.length} of {rfqs.length} RFQs</p></div>
        <button className="btn btn-primary" onClick={handleCreateRFQ}><Plus size={20} className="me-2" />Create RFQ</button>
      </div>

      <div className="card mb-4">
        <div className="card-body">
          <div className="row g-3">
            <div className="col-md-4">
              <div className="input-group">
                <span className="input-group-text"><Search size={18} /></span>
                <input type="text" className="form-control" placeholder="Search RFQs..." value={searchTerm} onChange={(e) => setSearchTerm(e.target.value)} />
              </div>
            </div>
            <div className="col-md-3">
              <select className="form-select" value={filterStatus} onChange={(e) => setFilterStatus(e.target.value)}>
                <option value="ALL">All Statuses</option>
                <option value="NEW">New</option>
                <option value="IN_PROGRESS">In Progress</option>
                <option value="QUOTED">Quoted</option>
                <option value="WON">Won</option>
                <option value="LOST">Lost</option>
                <option value="CANCELLED">Cancelled</option>
              </select>
            </div>
            <div className="col-md-3">
              <select className="form-select" value={filterPriority} onChange={(e) => setFilterPriority(e.target.value)}>
                <option value="ALL">All Priorities</option>
                <option value="URGENT">Urgent</option>
                <option value="HIGH">High</option>
                <option value="MEDIUM">Medium</option>
                <option value="LOW">Low</option>
              </select>
            </div>
            <div className="col-md-2">
              <button className="btn btn-outline-secondary w-100" onClick={() => { setSearchTerm(''); setFilterStatus('ALL'); setFilterPriority('ALL'); }}><Filter size={18} className="me-2" />Clear</button>
            </div>
          </div>
        </div>
      </div>

      {filteredRFQs.length === 0 ? (
        <div className="alert alert-info"><AlertCircle size={20} className="me-2" />No RFQs found.</div>
      ) : (
        <div className="row g-3">
          {filteredRFQs.map((rfq) => {
            const rfqNum = getField(rfq, 'rfqNumber', 'rfq_number');
            const clientName = getField(rfq, 'clientName', 'client_name');
            const projectName = getField(rfq, 'projectName', 'project_name');
            const receivedDate = getField(rfq, 'receivedDate', 'received_date');
            const requiredBy = getField(rfq, 'requiredBy', 'required_by');
            const operatingEntity = getField(rfq, 'operatingEntity', 'operating_entity');
            const estimatedValue = rfq.estimatedValue || rfq.estimated_value;
            return (
              <div key={rfq.id} className="col-md-6 col-lg-4">
                <div className="card h-100 hover-shadow" style={{ cursor: 'pointer' }}>
                  <div className="card-body" onClick={() => handleViewRFQ(rfq.id)}>
                    <div className="d-flex justify-content-between align-items-start mb-3">
                      <div><h5 className="card-title mb-1">{rfqNum}</h5><small className="text-muted">#{rfq.id}</small></div>
                      {operatingEntity && <span className={'badge bg-' + (operatingEntity === 'ERHA FC' ? 'primary' : 'success')}>{operatingEntity}</span>}
                    </div>
                    <div className="mb-3">
                      <div className="d-flex align-items-center mb-2"><Building size={16} className="text-muted me-2" /><strong>{clientName}</strong></div>
                      <p className="mb-0 small text-muted">{projectName}</p>
                    </div>
                    <div className="mb-3 small">
                      <div className="d-flex align-items-center mb-1"><Clock size={14} className="text-muted me-2" /><span className="text-muted">Received:</span><span className="ms-auto">{receivedDate ? new Date(receivedDate).toLocaleDateString('en-ZA') : 'N/A'}</span></div>
                      <div className="d-flex align-items-center"><Calendar size={14} className="text-muted me-2" /><span className="text-muted">Required:</span><span className="ms-auto">{requiredBy ? new Date(requiredBy).toLocaleDateString('en-ZA') : 'N/A'}</span></div>
                    </div>
                    <div className="d-flex gap-2 mb-3">
                      <span className={'badge bg-' + getStatusBadge(rfq.status) + ' flex-fill'}>{rfq.status}</span>
                      <span className={'badge bg-' + getPriorityBadge(rfq.priority) + ' flex-fill'}>{rfq.priority}</span>
                    </div>
                    {estimatedValue && (<div className="mb-3"><small className="text-muted">Estimated Value</small><p className="mb-0 fw-bold text-success">R {Number(estimatedValue).toLocaleString('en-ZA', { minimumFractionDigits: 2 })}</p></div>)}
                    <button className="btn btn-outline-primary btn-sm w-100" onClick={(e) => { e.stopPropagation(); handleViewRFQ(rfq.id); }}><Eye size={16} className="me-2" />View Details</button>
                  </div>
                </div>
              </div>
            );
          })}
        </div>
      )}
    </div>
  );
}