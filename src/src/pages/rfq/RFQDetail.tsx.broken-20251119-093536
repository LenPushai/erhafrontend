// RFQDetail.tsx - Comprehensive Full Page Detail View
import React, { useEffect, useState } from 'react';
import { useParams, useNavigate } from 'react-router-dom';
import {
  Box,
  Container,
  Card,
  CardContent,
  Typography,
  Button,
  Grid,
  Divider,
  Chip,
  Alert,
  CircularProgress,
  Paper,
  Table,
  TableBody,
  TableCell,
  TableContainer,
  TableHead,
  TableRow,
  IconButton,
} from '@mui/material';
import {
  ArrowBack,
  Edit,
  Delete,
  AddCircleOutline,
  Business,
  Person,
  Email,
  Phone,
  Description,
  LocationOn,
  AttachMoney,
  Flag,
  CalendarToday,
  AssignmentInd,
} from '@mui/icons-material';
import { getRFQById, deleteRFQ } from '../../services/rfqService';

interface RFQ {
  id: number;
  rfqNumber: string;
  clientName: string;
  contactPerson: string;
  email: string;
  phone: string;
  operatingEntity: string;
  projectName: string;
  description: string;
  workLocation: string;
  estimatedValue?: number;
  status: string;
  priority: string;
  receivedDate: string;
  requiredByDate: string;
  assignedTo?: string;
  createdAt?: string;
  updatedAt?: string;
}

interface Quote {
  id: number;
  quoteNumber: string;
  totalAmount: number;
  status: string;
  createdAt: string;
}

const RFQDetail: React.FC = () => {
  const { id } = useParams<{ id: string }>();
  const navigate = useNavigate();
  const [rfq, setRfq] = useState<RFQ | null>(null);
  const [relatedQuotes, setRelatedQuotes] = useState<Quote[]>([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);

  useEffect(() => {
    fetchRFQDetails();
  }, [id]);

  const fetchRFQDetails = async () => {
    try {
      setLoading(true);
      setError(null);
      const data = await getRFQById(Number(id));
      setRfq(data);

      // TODO: Fetch related quotes when API is ready
      // const quotes = await getQuotesByRFQ(Number(id));
      // setRelatedQuotes(quotes);
    } catch (err) {
      console.error('Error fetching RFQ details:', err);
      setError('Failed to load RFQ details. Please try again.');
    } finally {
      setLoading(false);
    }
  };

  const handleDelete = async () => {
    if (!window.confirm('Are you sure you want to delete this RFQ?')) {
      return;
    }

    try {
      await deleteRFQ(Number(id));
      navigate('/rfq');
    } catch (err) {
      console.error('Error deleting RFQ:', err);
      alert('Failed to delete RFQ. Please try again.');
    }
  };

  const getStatusColor = (status: string) => {
    switch (status?.toLowerCase()) {
      case 'new':
        return 'primary';
      case 'in progress':
        return 'info';
      case 'quoted':
        return 'success';
      case 'closed':
        return 'default';
      default:
        return 'default';
    }
  };

  const getPriorityColor = (priority: string) => {
    switch (priority?.toLowerCase()) {
      case 'high':
        return 'error';
      case 'medium':
        return 'warning';
      case 'low':
        return 'success';
      default:
        return 'default';
    }
  };

  const formatDate = (dateString: string | undefined) => {
    if (!dateString) return 'N/A';
    try {
      return new Date(dateString).toLocaleDateString();
    } catch (e) {
      return dateString;
    }
  };

  const formatCurrency = (number: number | undefined) => {
    if (!number) return 'N/A';
    return `R${number.toLocaleString('en-ZA')}`;
  };

  if (loading) {
    return (
      <Box display="flex" justifyContent="center" alignItems="center" minHeight="60vh">
        <CircularProgress />
      </Box>
    );
  }

  if (error || !rfq) {
    return (
      <Container maxWidth="lg" sx={{ mt: 4 }}>
        <Alert severity="error" sx={{ mb: 2 }}>
          {error || 'RFQ not found'}
        </Alert>
        <Button
          variant="contained"
          startIcon={<ArrowBack />}
          onClick={() => navigate('/rfq')}
        >
          Back to RFQ List
        </Button>
      </Container>
    );
  }

  return (
    <Container maxWidth="lg" sx={{ mt: 4, mb: 4 }}>
      {/* Header with Action Buttons */}
      <Box sx={{ mb: 3 }}>
        <Grid container justifyContent="space-between" alignItems="center">
          <Grid item>
            <Button
              variant="outlined"
              startIcon={<ArrowBack />}
              onClick={() => navigate('/rfq')}
              sx={{ mr: 2 }}
            >
              Back
            </Button>
          </Grid>
          <Grid item>
            <Box sx={{ display: 'flex', gap: 2 }}>
              <Button
                variant="contained"
                color="primary"
                startIcon={<AddCircleOutline />}
                onClick={() => navigate(`/quotes/create?rfqId=${rfq.id}`)}
              >
                Create Quote
              </Button>
              <Button
                variant="outlined"
                startIcon={<Edit />}
                onClick={() => navigate(`/rfq/${rfq.id}/edit`)}
              >
                Edit
              </Button>
              <Button
                variant="outlined"
                color="error"
                startIcon={<Delete />}
                onClick={handleDelete}
              >
                Delete
              </Button>
            </Box>
          </Grid>
        </Grid>
      </Box>

      {/* RFQ Title */}
      <Typography variant="h4" gutterBottom sx={{ fontWeight: 600 }}>
        RFQ # {rfq.rfqNumber}
      </Typography>
      <Typography variant="h6" color="text.secondary" gutterBottom>
        {rfq.projectName}
      </Typography>

      {/* Status and Priority Chips */}
      <Box sx={{ mb: 3, display: 'flex', gap: 1 }}>
        <Chip
          label={`Status: ${rfq.status}`}
          color={getStatusColor(rfq.status) as any}
        />
        <Chip
          label={`Priority: ${rfq.priority}`}
          color={getPriorityColor(rfq.priority) as any}
        />
      </Box>

      <Divider sx={{ mb: 3 }} />

      {/* Client Information Section */}
      <Card sx={{ mb: 3 }}>
        <CardContent>
          <Typography variant="h6" gutterBottom sx={{ fontWeight: 600, display: 'flex', alignItems: 'center' }}>
            <Business sx={{ mr: 1 }} />
            Client Information
          </Typography>
          <Grid container spacing={3}>
            <Grid item xs={12} md={6}>
              <Box sx={{ display: 'flex', alignItems: 'center', mb: 1 }}>
                <Business sx={{ mr: 1, color: 'text.secondary' }} />
                <Typography variant="body2" color="text.secondary">
                  Client:
                </Typography>
              </Box>
              <Typography variant="body1" sx={{ ml: 4 }}>
                {rfq.clientName}
              </Typography>
            </Grid>
            <Grid item xs={12} md={6}>
              <Box sx={{ display: 'flex', alignItems: 'center', mb: 1 }}>
                <Business sx={{ mr: 1, color: 'text.secondary' }} />
                <Typography> ariant="body2" color="text.secondary">
                  Operating Entity:
                </Typography>
              </Box>
              <Typography variant="body1" sx={{ ml: 4 }}>
                {rfq.operatingEntity}
              </Typography>
            </Grid>
            <Grid item xs={12} md={6}>
              <Box sx={{ display: 'flex', alignItems: 'center', mb: 1 }}>
                <Person sx={{ mr: 1, color: 'text.secondary' }} />
                <Typography> ariant="body2" color="text.secondary">
                  Contact Person:
                </Typography>
              </Box>
              <Typography variant="body1" sx={{ ml: 4 }}>
                {rfq.contactPerson}
              </Typography>
            </Grid>
            <Grid item xs={12} md={6}>
              <Box sx={{ display: 'flex', alignItems: 'center', mb: 1 }}>
                <Phone sx={{ mr: 1, color: 'text.secondary' }} />
                <Typography variant="body2" color="text.secondary">
                  Phone:
                </Typography>
              </Box>
              <Typography variant="body1" sx={{ ml: 4 }}>
                {rfq.phone}
              </Typography>
            </Grid>
            <Grid item xs={12} md={6}>
              <Box sx={{ display: 'flex', alignItems: 'center', mb: 1 }}>
                <Email sx={{ mr: 1, color: 'text.secondary' }} />
                <Typography variant="body2" color="text.secondary">
                  Email:
                </Typography>
              </Box>
              <Typography variant="body1" sx={{ ml: 4 }}>
                {rfq.email}
              </Typography>
            </Grid>
          </Grid>
        </CardContent>
      </Card>

      {/* Project Details Section */}
      <Card sx={{ mb: 3 }}>
        <CardContent>
          <Typography variant="h6" gutterBottom sx={{ fontWeight: 600, display: 'flex', alignItems: 'center' }}>
            <Description sx={{ mr: 1 }} />
            Project Details
          </Typography>
          <Grid container spacing={3}>
            <Grid item xs={12}>
              <Box sx={{ display: 'flex', alignItems: 'center', mb: 1 }}>
                <Description sx={{ mr: 1, color: 'text.secondary' }} />
                <Typography variant="body2" color="text.secondary">
                  Project Name:
                </Typography>
              </Box>
              <Typography variant="body1" sx={{ ml: 4 }}>
                {rfq.projectName}
              </Typography>
            </Grid>
            <Grid item xs={12}>
              <Box sx={{ display: 'flex', alignItems: 'flex-start', mb: 1 }}>
                <Description sx={{ mr: 1, color: 'text.secondary' }} />
                <Typography variant="body2" color="text.secondary">
                  Description:
                </Typography>
              </Box>
              <Paper 
                elevation={0} 
                sx={{ 
                  ml: 4, 
                  p: 2, 
                  backgroundColor: 'grey.100',
                  whiteSpace: 'pre-wrap' 
                }}
              >
                <Typography variant="body1">
                  {rfq.description}
                </Typography>
              </Paper>
            </Grid>
            <Grid item xs={12} md={6}>
              <Box sx={{ display: 'flex', alignItems: 'center', mb: 1 }}>
                <LocationOn sx={{ mr: 1, color: 'text.secondary' }} />
                <Typography variant="body2" color="text.secondary">
                  Work Location:
                </Typography>
              </Box>
              <Typography variant="body1" sx={{ ml: 4 }}>
                {rfq.workLocation}
              </Typography>
            </Grid>
            <Grid item xs={12} md={6}>
              <Box sx={{ display: 'flex', alignItems: 'center', mb: 1 }}>
                <AttachMoney sx={{ mr: 1, color: 'text.secondary' }} />
                <Typography variant="body2" color="text.secondary">
                  Estimated Value:
                </Typography>
              </Box>
              <Typography variant="h6" sx={{ ml: 4, fontWeight: 600 }}>
                {formatCurrency(rfq.estimatedValue)}
              </Typography>
            </Grid>
          </Grid>
        </CardContent>
      </Card>

      {/* Status & Timeline Section */}
      <Card sx={{ mb: 3 }}>
        <CardContent>
          <Typography variant="h6" gutterBottom sx={{ fontWeight: 600, display: 'flex', alignItems: 'center' }}>
            <Flag sx={{ mr: 1 }} />
            Status & Timeline
          </Typography>
          <Grid container spacing={3}>
            <Grid item xs={12} md={4}>
              <Box sx={{ display: 'flex', alignItems: 'center', mb: 1 }}>
                <Flag sx={{ mr: 1, color: 'text.secondary' }} />
                <Typography variant="body2" color="text.secondary">
                  Status:
                </Typography>
              </Box>
              <Chip
                label={rfq.status}
                color={getStatusColor(rfq.status) as any}
                sx={{ ml: 2 }}
              />
            </Grid>
            <Grid item xs={12} md={4}>
              <Box sx={{ display: 'flex', alignItems: 'center', mb: 1 }}>
                <Flag sx={{ mr: 1, color: 'text.secondary' }} />
                <Typography variant="body2" color="text.secondary">
                  Priority:
                </Typography>
              </Box>
              <Chip
                label={rfq.priority}
                color={getPriorityColor(rfq.priority) as any}
                sx={{ ml: 2 }}
              />
            </Grid>
            <Grid item xs={12} md={4}>
              <Box sx={{ display: 'flex', alignItems: 'center', mb: 1 }}>
                <AssignmentInd sx={{ mr: 1, color: 'text.secondary' }} />
                <Typography variant="body2" color="text.secondary">
                  Assigned To:
                </Typography>
              </Box>
              <Typography variant="body1" sx={{ ml: 2 }}>
                {rfq.assignedTo || 'Unassigned'}
              </Typography>
            </Grid>
            <Grid item xs={12} md={4}>
              <Box sx={{ display: 'flex', alignItems: 'center', mb: 1 }}>
                <CalendarToday sx={{ mr: 1, color: 'text.secondary' }} />
                <Typography variant="body2" color="text.secondary">
                  Received Date:
                </Typography>
              </Box>
              <Typography variant="body1" sx={{ ml: 2 }}>
                {formatDate(rfq.receivedDate)}
              </Typography>
            </Grid>
            <Grid item xs={12} md={4}>
              <Box sx={{ display: 'flex', alignItems: 'center', mb: 1 }}>
                <CalendarToday sx={{ mr: 1, color: 'text.secondary' }} />
                <Typography variant="body2" color="text.secondary">
                  Required By:
                </Typography>
              </Box>
              <Typography variant="body1" sx={{ ml: 2 }}>
                {formatDate(rfq.requiredByDate)}
              </Typography>
            </Grid>
          </Grid>
        </CardContent>
      </Card>

      {/* Related Quotes Section */}
      {relatedQuotes.length > 0 && (
        <Card sx={{ mb: 3 }}>
          <CardContent>
            <Typography variant="h6" gutterBottom sx={{ fontWeight: 600 }}>
              Related Quotes ({relatedQuotes.length})
            </Typography>
            <TableContainer>
              <Table>
                <TableHead>
                  <TableRow>
                    <TableCell>#Quote</TableCell>
                    <TableCell>Amount</TableCell>
                    <TableCell>Status</TableCell>
                    <TableCell>Date</TableCell>
                    <TableCell align="right">Actions</TableCell>
                  </TableRow>
                </TableHead>
                <TableBody>
                  {relatedQuotes.map((quote) => (
                    <TableRow key={quote.id}>
                      <TableCell>{quote.quoteNumber}</TableCell>
                      <TableCell>{formatCurrency(quote.totalAmount)}</TableCell>
                      <TableCell>
                        <Chip label={quote.status} size="small" />
                      </TableCell>
                      <TableCell>{formatDate(quote.createdAt)}</TableCell>
                      <TableCell align="right">
                        <Button
                          size="small"
                          onClick={() => navigate(`/quotes/${quote.id}`)}
                        >
                          View
                        </Button>
                      </TableCell>
                    </TableRow>
                  ))}
                </TableBody>
              </Table>
            </TableContainer>
          </CardContent>
        </Card>
      )}

      {/* Audit Info */}
      {(rfq.createdAt || rfq.updatedAt) && (
        <Box sx={{ mt: 3, pt: 2, borderTop: 1, borderColor: 'divider' }}>
          <Grid container spacing={2}>
            {rfq.createdAt && (
              <Grid item xs={12} md={6}>
                <Typography variant="caption" color="text.secondary">
                  Created: {formatDate(rfq.createdAt)}
                </Typography>
              </Grid>
            )}
            {rfq.updatedAt && (
              <Grid item xs={12} md={6}>
                <Typography variant="caption" color="text.secondary">
                  Last Updated: {formatDate(rfq.updatedAt)}
                </Typography>
              </Grid>
            )}
          </Grid>
        </Box>
      )}
    </Container>
  );
};

export default RFQDetail;