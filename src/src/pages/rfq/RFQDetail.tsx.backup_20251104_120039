import React, { useState, useEffect } from 'react';
import { useParams, useNavigate } from 'react-router-dom';
import { ArrowLeft, Edit, Trash2, AlertCircle } from 'lucide-react';
import rfqService from '../../services/rfqService';

interface RFQ {
  id: number;
  jobNo: string;
  clientId: number;
  contactPerson: string;
  contactEmail?: string;
  contactPhone?: string;
  department?: string;
  operatingEntity: string;
  description: string;
  requestDate: string;
  requiredDate: string;
  priority: string;
  status: string;
  estimatedValue?: number;
  specialRequirements?: string;
  assignedTo?: string;
  followUpDate?: string;
  notes?: string;
  remarks?: string;
  createdAt: string;
  updatedAt?: string;
}

const RFQDetail: React.FC = () => {
  const { id } = useParams<{ id: string }>();
  const navigate = useNavigate();
  const [rfq, setRfq] = useState<RFQ | null>(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);

  useEffect(() => {
    loadRFQ();
  }, [id]);

  const loadRFQ = async () => {
    // CRITICAL: Validate ID before fetching
    if (!id) {
      setError('No RFQ ID provided');
      setLoading(false);
      return;
    }

    const numId = parseInt(id);
    if (isNaN(numId) || numId <= 0) {
      setError(\Invalid RFQ ID: \\);
      setLoading(false);
      return;
    }

    try {
      setLoading(true);
      setError(null);
      const data = await rfqService.getRFQById(numId);
      setRfq(data);
    } catch (err: any) {
      console.error('Failed to load RFQ:', err);
      setError(err.message || 'Failed to load RFQ');
    } finally {
      setLoading(false);
    }
  };

  const handleDelete = async () => {
    if (!rfq || !window.confirm('Are you sure you want to delete this RFQ?')) {
      return;
    }

    try {
      await rfqService.deleteRFQ(rfq.id);
      alert('RFQ deleted successfully');
      navigate('/rfqs');
    } catch (err: any) {
      alert(err.message || 'Failed to delete RFQ');
    }
  };

  if (loading) {
    return (
      <div className="container-fluid p-4">
        <div className="text-center">
          <div className="spinner-border text-primary" role="status">
            <span className="visually-hidden">Loading...</span>
          </div>
          <p className="mt-2">Loading RFQ...</p>
        </div>
      </div>
    );
  }

  if (error) {
    return (
      <div className="container-fluid p-4">
        <div className="alert alert-danger">
          <AlertCircle size={20} className="me-2" />
          <strong>Error:</strong> {error}
        </div>
        <button className="btn btn-primary" onClick={() => navigate('/rfqs')}>
          <ArrowLeft size={16} className="me-2" />
          Back to RFQs
        </button>
      </div>
    );
  }

  if (!rfq) {
    return (
      <div className="container-fluid p-4">
        <div className="alert alert-warning">
          <AlertCircle size={20} className="me-2" />
          RFQ not found
        </div>
        <button className="btn btn-primary" onClick={() => navigate('/rfqs')}>
          <ArrowLeft size={16} className="me-2" />
          Back to RFQs
        </button>
      </div>
    );
  }

  return (
    <div className="container-fluid p-4">
      <div className="d-flex justify-content-between align-items-center mb-4">
        <div className="d-flex align-items-center gap-3">
          <button className="btn btn-outline-secondary" onClick={() => navigate('/rfqs')}>
            <ArrowLeft size={16} />
          </button>
          <div>
            <h2 className="mb-1">{rfq.jobNo}</h2>
            <div className="text-muted small">RFQ Details</div>
          </div>
        </div>
        <div className="d-flex gap-2">
          <button className="btn btn-primary" onClick={() => navigate(\/rfqs/edit/\\)}>
            <Edit size={16} className="me-2" />
            Edit
          </button>
          <button className="btn btn-danger" onClick={handleDelete}>
            <Trash2 size={16} className="me-2" />
            Delete
          </button>
        </div>
      </div>

      <div className="row">
        <div className="col-lg-8">
          <div className="card mb-3">
            <div className="card-header bg-light">
              <h5 className="mb-0">Client Information</h5>
            </div>
            <div className="card-body">
              <div className="row">
                <div className="col-md-6 mb-3">
                  <label className="text-muted small">Contact Person</label>
                  <p className="mb-0 fw-bold">{rfq.contactPerson}</p>
                </div>
                <div className="col-md-6 mb-3">
                  <label className="text-muted small">Contact Email</label>
                  <p className="mb-0">{rfq.contactEmail || 'N/A'}</p>
                </div>
                <div className="col-md-6 mb-3">
                  <label className="text-muted small">Contact Phone</label>
                  <p className="mb-0">{rfq.contactPhone || 'N/A'}</p>
                </div>
                <div className="col-md-6 mb-3">
                  <label className="text-muted small">Department</label>
                  <p className="mb-0">{rfq.department || 'N/A'}</p>
                </div>
              </div>
            </div>
          </div>

          <div className="card mb-3">
            <div className="card-header bg-light">
              <h5 className="mb-0">RFQ Details</h5>
            </div>
            <div className="card-body">
              <div className="row">
                <div className="col-md-6 mb-3">
                  <label className="text-muted small">Operating Entity</label>
                  <p className="mb-0">
                    <span className="badge bg-success">{rfq.operatingEntity}</span>
                  </p>
                </div>
                <div className="col-md-6 mb-3">
                  <label className="text-muted small">Priority</label>
                  <p className="mb-0">
                    <span className={\adge bg-\\}>
                      {rfq.priority}
                    </span>
                  </p>
                </div>
                <div className="col-md-6 mb-3">
                  <label className="text-muted small">Date Received</label>
                  <p className="mb-0">{new Date(rfq.requestDate).toLocaleDateString()}</p>
                </div>
                <div className="col-md-6 mb-3">
                  <label className="text-muted small">Required By</label>
                  <p className="mb-0">{new Date(rfq.requiredDate).toLocaleDateString()}</p>
                </div>
                <div className="col-12 mb-3">
                  <label className="text-muted small">Description</label>
                  <p className="mb-0">{rfq.description}</p>
                </div>
                {rfq.specialRequirements && (
                  <div className="col-12 mb-3">
                    <label className="text-muted small">Special Requirements</label>
                    <p className="mb-0">{rfq.specialRequirements}</p>
                  </div>
                )}
              </div>
            </div>
          </div>

          {(rfq.notes || rfq.remarks) && (
            <div className="card mb-3">
              <div className="card-header bg-light">
                <h5 className="mb-0">Notes</h5>
              </div>
              <div className="card-body">
                {rfq.notes && (
                  <div className="mb-3">
                    <label className="text-muted small">Internal Notes</label>
                    <p className="mb-0">{rfq.notes}</p>
                  </div>
                )}
                {rfq.remarks && (
                  <div>
                    <label className="text-muted small">Remarks</label>
                    <p className="mb-0">{rfq.remarks}</p>
                  </div>
                )}
              </div>
            </div>
          )}
        </div>

        <div className="col-lg-4">
          <div className="card">
            <div className="card-header bg-light">
              <h6 className="mb-0">Summary</h6>
            </div>
            <div className="card-body">
              <div className="mb-3">
                <label className="text-muted small">Status</label>
                <p className="mb-0">
                  <span className="badge bg-primary">{rfq.status}</span>
                </p>
              </div>
              {rfq.estimatedValue && (
                <div className="mb-3">
                  <label className="text-muted small">Estimated Value</label>
                  <p className="mb-0 fw-bold text-success">
                    R {rfq.estimatedValue.toLocaleString()}
                  </p>
                </div>
              )}
              {rfq.assignedTo && (
                <div className="mb-3">
                  <label className="text-muted small">Assigned To</label>
                  <p className="mb-0">{rfq.assignedTo}</p>
                </div>
              )}
              {rfq.followUpDate && (
                <div className="mb-3">
                  <label className="text-muted small">Follow-up Date</label>
                  <p className="mb-0">{new Date(rfq.followUpDate).toLocaleDateString()}</p>
                </div>
              )}
              <div className="mb-3">
                <label className="text-muted small">Created</label>
                <p className="mb-0 small">{new Date(rfq.createdAt).toLocaleString()}</p>
              </div>
              {rfq.updatedAt && (
                <div>
                  <label className="text-muted small">Last Updated</label>
                  <p className="mb-0 small">{new Date(rfq.updatedAt).toLocaleString()}</p>
                </div>
              )}
            </div>
          </div>
        </div>
      </div>
    </div>
  );
};

export default RFQDetail;