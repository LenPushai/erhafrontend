import React, { useState, useEffect } from 'react';
import { Link, useParams, useNavigate } from 'react-router-dom';
import { jobService } from '../../services/jobService';
import type { Job } from '../../services/jobService';
import PageHeader from '../../components/common/PageHeader';

const JobDetail: React.FC = () => {
  const { id } = useParams<{ id: string }>();
  const navigate = useNavigate();
  const [job, setJob] = useState<Job | null>(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);

  useEffect(() => {
    if (id) {
      loadJob(id);
    } else {
      setError('No job ID provided');
      setLoading(false);
    }
  }, [id]);

  const loadJob = async (jobId: string) => {
    try {
      setLoading(true);
      setError(null);
      console.log('Loading job with ID:', jobId);
      const data = await jobService.getJobById(jobId);
      setJob(data);
    } catch (err: any) {
      console.error('Error loading job:', err);
      setError(err.message || 'Failed to load job');
    } finally {
      setLoading(false);
    }
  };

  const formatCurrency = (value: number) => {
    return new Intl.NumberFormat('en-ZA', {
      style: 'currency',
      currency: 'ZAR',
    }).format(value);
  };

  const formatDate = (dateString?: string) => {
    if (!dateString) return 'N/A';
    return new Date(dateString).toLocaleDateString('en-ZA', {
      year: 'numeric',
      month: 'long',
      day: 'numeric',
    });
  };

  const getStatusBadgeClass = (status: string) => {
    switch (status?.toUpperCase()) {
      case 'ACTIVE':
        return 'badge bg-success';
      case 'PENDING':
        return 'badge bg-warning';
      case 'ON_HOLD':
        return 'badge bg-secondary';
      case 'COMPLETED':
        return 'badge bg-primary';
      case 'INVOICED':
        return 'badge bg-info';
      case 'CANCELLED':
        return 'badge bg-danger';
      default:
        return 'badge bg-secondary';
    }
  };

  const getPriorityBadgeClass = (priority: string) => {
    switch (priority?.toUpperCase()) {
      case 'HIGH':
      case 'URGENT':
        return 'badge bg-danger';
      case 'MEDIUM':
        return 'badge bg-warning';
      case 'LOW':
        return 'badge bg-secondary';
      default:
        return 'badge bg-secondary';
    }
  };

  if (loading) {
    return (
        <div className="container-fluid py-4">
          <div className="d-flex justify-content-center align-items-center" style={{ minHeight: '400px' }}>
            <div className="spinner-border text-primary" role="status">
              <span className="visually-hidden">Loading...</span>
            </div>
          </div>
        </div>
    );
  }

  if (error || !job) {
    return (
        <div className="container-fluid py-4">
          <div className="alert alert-danger" role="alert">
            <h4 className="alert-heading">Error Loading Job</h4>
            <p>{error || 'Job not found'}</p>
            <hr />
            <Link to="/jobs" className="btn btn-outline-danger">
              <i className="bi bi-arrow-left me-2"></i>
              Back to Jobs
            </Link>
          </div>
        </div>
    );
  }

  return (
      <div className="container-fluid py-4">
        {/* NEW: PageHeader Component */}
        <PageHeader 
          title={`Job ${job.jobNumber}`}
          subtitle={job.description || 'No description'}
          showBreadcrumbs={true}
          showBackButton={true}
          backButtonPath="/jobs"
          backButtonLabel="Back to Jobs"
          actions={
            <div className="d-flex gap-2">
              <Link to={`/jobs/${job.jobId}/edit`} className="btn btn-primary">
                <i className="bi bi-pencil me-2"></i>
                Edit Job
              </Link>
              <button className="btn btn-outline-secondary">
                <i className="bi bi-printer me-2"></i>
                Print Job Card
              </button>
            </div>
          }
        />

        {/* Status badges moved below header */}
        <div className="d-flex gap-2 mb-4">
          <span className={getStatusBadgeClass(job.status)}>
            {job.status}
          </span>
          {job.priority && (
              <span className={getPriorityBadgeClass(job.priority)}>
                {job.priority}
              </span>
          )}
        </div>

        {/* Traceability Chain */}
        <div className="card mb-4 border-primary">
          <div className="card-body">
            <h6 className="card-title mb-3">
              <i className="bi bi-diagram-3 me-2"></i>
              Traceability Chain
            </h6>
            <div className="d-flex align-items-center gap-3">
              {job.rfqId && (
                  <>
                    <Link to={`/rfqs/${job.rfqId}`} className="btn btn-outline-secondary">
                      <i className="bi bi-file-earmark-text me-2"></i>
                      RFQ #{job.rfqId}
                    </Link>
                    <i className="bi bi-arrow-right text-muted"></i>
                  </>
              )}
              {job.quoteId && (
                  <>
                    <Link to={`/quotes/${job.quoteId}`} className="btn btn-outline-primary">
                      <i className="bi bi-file-earmark-check me-2"></i>
                      Quote #{job.quoteId}
                    </Link>
                    <i className="bi bi-arrow-right text-muted"></i>
                  </>
              )}
              <div className="btn btn-success">
                <i className="bi bi-briefcase me-2"></i>
                Job {job.jobNumber}
              </div>
            </div>
          </div>
        </div>

        <div className="row">
          {/* Main Information */}
          <div className="col-lg-8">
            {/* Job Details Card */}
            <div className="card mb-4">
              <div className="card-header">
                <h5 className="mb-0">Job Details</h5>
              </div>
              <div className="card-body">
                <div className="row g-3">
                  <div className="col-md-6">
                    <label className="text-muted small">Job Number</label>
                    <div className="fw-bold">{job.jobNumber}</div>
                  </div>
                  <div className="col-md-6">
                    <label className="text-muted small">Client</label>
                    <div className="fw-bold">{job.clientName || 'N/A'}</div>
                  </div>
                  <div className="col-md-6">
                    <label className="text-muted small">Location</label>
                    <div className="fw-bold">{job.shopOrSite || 'N/A'}</div>
                  </div>
                  <div className="col-md-6">
                    <label className="text-muted small">Order Number</label>
                    <div className="fw-bold">{job.orderNo || 'N/A'}</div>
                  </div>
                  <div className="col-12">
                    <label className="text-muted small">Description</label>
                    <div>{job.description || 'N/A'}</div>
                  </div>
                  {job.remarks && (
                      <div className="col-12">
                        <label className="text-muted small">Remarks</label>
                        <div className="p-3 bg-light rounded">{job.remarks}</div>
                      </div>
                  )}
                </div>
              </div>
            </div>

            {/* Financial Information Card */}
            <div className="card mb-4">
              <div className="card-header">
                <h5 className="mb-0">Financial Information</h5>
              </div>
              <div className="card-body">
                <div className="row g-3">
                  <div className="col-md-4">
                    <label className="text-muted small">Value (Excl VAT)</label>
                    <div className="fw-bold fs-5">
                      {formatCurrency(job.orderValueExcl)}
                    </div>
                  </div>
                  <div className="col-md-4">
                    <label className="text-muted small">VAT (15%)</label>
                    <div className="fw-bold fs-5">
                      {formatCurrency(job.orderValueIncl - job.orderValueExcl)}
                    </div>
                  </div>
                  <div className="col-md-4">
                    <label className="text-muted small">Total (Incl VAT)</label>
                    <div className="fw-bold fs-5 text-success">
                      {formatCurrency(job.orderValueIncl)}
                    </div>
                  </div>
                </div>
              </div>
            </div>

            {/* Dates Card */}
            <div className="card mb-4">
              <div className="card-header">
                <h5 className="mb-0">Important Dates</h5>
              </div>
              <div className="card-body">
                <div className="row g-3">
                  <div className="col-md-6">
                    <label className="text-muted small">Order Received</label>
                    <div className="fw-bold">{formatDate(job.orderReceivedDate)}</div>
                  </div>
                  <div className="col-md-6">
                    <label className="text-muted small">Expected Delivery</label>
                    <div className="fw-bold">{formatDate(job.expectedDeliveryDate)}</div>
                  </div>
                  <div className="col-md-6">
                    <label className="text-muted small">Start Date</label>
                    <div className="fw-bold">{formatDate(job.startDate)}</div>
                  </div>
                  <div className="col-md-6">
                    <label className="text-muted small">Target Completion</label>
                    <div className="fw-bold">{formatDate(job.targetCompletionDate)}</div>
                  </div>
                  {job.actualCompletionDate && (
                      <div className="col-md-6">
                        <label className="text-muted small">Actual Completion</label>
                        <div className="fw-bold text-success">
                          {formatDate(job.actualCompletionDate)}
                        </div>
                      </div>
                  )}
                </div>
              </div>
            </div>

            {/* Delivery & Invoice (Phase 2) */}
            {(job.deliveryNo || job.invoiceNo) && (
                <div className="card mb-4">
                  <div className="card-header">
                    <h5 className="mb-0">Delivery & Invoice</h5>
                  </div>
                  <div className="card-body">
                    <div className="row g-3">
                      {job.deliveryNo && (
                          <>
                            <div className="col-md-6">
                              <label className="text-muted small">Delivery Number</label>
                              <div className="fw-bold">{job.deliveryNo}</div>
                            </div>
                            <div className="col-md-6">
                              <label className="text-muted small">Delivery Date</label>
                              <div className="fw-bold">{formatDate(job.deliveryDate)}</div>
                            </div>
                          </>
                      )}
                      {job.invoiceNo && (
                          <>
                            <div className="col-md-6">
                              <label className="text-muted small">Invoice Number</label>
                              <div className="fw-bold">{job.invoiceNo}</div>
                            </div>
                            <div className="col-md-6">
                              <label className="text-muted small">Invoice Date</label>
                              <div className="fw-bold">{formatDate(job.invoiceDate)}</div>
                            </div>
                          </>
                      )}
                    </div>
                  </div>
                </div>
            )}
          </div>

          {/* Sidebar */}
          <div className="col-lg-4">
            {/* Progress Card */}
            <div className="card mb-4">
              <div className="card-header">
                <h5 className="mb-0">Progress</h5>
              </div>
              <div className="card-body">
                <div className="text-center mb-3">
                  <div className="display-4 fw-bold text-primary">
                    {job.progressPercentage || 0}%
                  </div>
                  <small className="text-muted">Complete</small>
                </div>
                <div className="progress" style={{ height: '20px' }}>
                  <div
                      className="progress-bar"
                      role="progressbar"
                      style={{ width: `${job.progressPercentage || 0}%` }}
                      aria-valuenow={job.progressPercentage || 0}
                      aria-valuemin={0}
                      aria-valuemax={100}
                  >
                    {job.progressPercentage || 0}%
                  </div>
                </div>
              </div>
            </div>

            {/* Status Card */}
            <div className="card mb-4">
              <div className="card-header">
                <h5 className="mb-0">Status & Priority</h5>
              </div>
              <div className="card-body">
                <div className="mb-3">
                  <label className="text-muted small">Status</label>
                  <div>
                  <span className={`${getStatusBadgeClass(job.status)} fs-6`}>
                    {job.status}
                  </span>
                  </div>
                </div>
                {job.priority && (
                    <div>
                      <label className="text-muted small">Priority</label>
                      <div>
                    <span className={`${getPriorityBadgeClass(job.priority)} fs-6`}>
                      {job.priority}
                    </span>
                      </div>
                    </div>
                )}
              </div>
            </div>

            {/* Links Card */}
            <div className="card mb-4">
              <div className="card-header">
                <h5 className="mb-0">Related Documents</h5>
              </div>
              <div className="card-body">
                <div className="d-flex flex-column gap-2">
                  {job.rfqId && (
                      <Link
                          to={`/rfqs/${job.rfqId}`}
                          className="btn btn-outline-secondary w-100"
                      >
                        <i className="bi bi-file-earmark-text me-2"></i>
                        View RFQ #{job.rfqId}
                      </Link>
                  )}
                  {job.quoteId && (
                      <Link
                          to={`/quotes/${job.quoteId}`}
                          className="btn btn-outline-primary w-100"
                      >
                        <i className="bi bi-file-earmark-check me-2"></i>
                        View Quote #{job.quoteId}
                      </Link>
                  )}
                  <button className="btn btn-outline-info w-100">
                    <i className="bi bi-printer me-2"></i>
                    Print Job Card
                  </button>
                </div>
              </div>
            </div>

            {/* Metadata Card */}
            <div className="card">
              <div className="card-header">
                <h5 className="mb-0">Metadata</h5>
              </div>
              <div className="card-body">
                <div className="small">
                  <div className="mb-2">
                    <span className="text-muted">Created:</span><br />
                    {formatDate(job.createdDate)}
                  </div>
                  <div className="mb-2">
                    <span className="text-muted">Last Modified:</span><br />
                    {formatDate(job.lastModifiedDate)}
                  </div>
                  {job.createdBy && (
                      <div>
                        <span className="text-muted">Created By:</span><br />
                        {job.createdBy}
                      </div>
                  )}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  );
};

export default JobDetail;
